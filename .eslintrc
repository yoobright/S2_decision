{
    "ignorePatterns": ["vendor/*.js", "vendor/*/*.js"],
    "globals": {
        "d3": "readonly",
        "noUiSlider": "readonly"
    },
    "env": {
        "browser": true,
        "jquery": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "eqeqeq": ["error", "always"],
        "dot-notation": "error",
        "no-unused-vars": ["error", { "vars": "all", "args": "none"}],
        "wrap-iife": ["error", "any"],
        "require-unicode-regexp": "error",
        "no-trailing-spaces": "error",
        // "no-console": "error",
        "prefer-const": [ "error", { "destructuring": "all" } ]
    }
}